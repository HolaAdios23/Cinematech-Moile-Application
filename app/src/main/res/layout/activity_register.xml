<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2929"
    android:paddingTop="15dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".view.Register">

    <LinearLayout
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/register_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#E4E4E4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your new account"
            android:textSize="17sp"
            android:textColor="#E4E4E4"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/username_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Username"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                android:textColor="#131313"
                android:background="@drawable/custom_input_background"
                android:inputType="text"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/user"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:paddingStart="40dp"
                android:textColor="#131313"
                android:paddingEnd="10dp"
                android:background="@drawable/custom_input_background"
                android:inputType="text"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/email"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/password_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                android:textColor="#131313"
                android:background="@drawable/custom_input_background"
                android:inputType="textPassword"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/padlock"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <EditText
                android:id="@+id/retype_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm Password"
                android:paddingStart="40dp"
                android:paddingEnd="10dp"
                android:textColor="#131313"
                android:background="@drawable/custom_input_background"
                android:inputType="textPassword"
                />
            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/padlock"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"

            android:paddingEnd="10dp"
            android:layout_marginTop="25dp">

            <CheckBox
                android:id="@+id/register_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_agree"
                android:textSize="18sp"
                android:lineSpacingExtra="10dp"
                android:gravity="top"
                android:textColor="#E4E4E4"
                android:buttonTint="#E4E4E4"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10sp"
            android:paddingEnd="10sp"
            android:paddingBottom="50dp">

            <Button
                android:id="@+id/register_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/login_button"
                android:text="@string/register_button"
                android:textSize="20sp"
                android:textColor="#DFDFDF"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? LogIn"
                android:layout_marginTop="11dp"
                android:textSize="20sp"
                android:textColor="#E4E4E4"
                />

        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>