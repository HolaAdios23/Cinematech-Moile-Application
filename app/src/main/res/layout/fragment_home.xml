<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".screens.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/test_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:padding="15dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CINEMATECH"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#DFDFDF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1">
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="15dp"
                    android:background="@drawable/notification_icon"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/options_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/all_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="All"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/categories_button"
                />

            <Button
                android:id="@+id/movie_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="Movies"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/categories_button"
                />

            <Button
                android:id="@+id/tvshow_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="TV Shows"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/categories_button"
                />

            <Button
                android:id="@+id/categories_button"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:text="Categories"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/categories_button"
                />


        </LinearLayout>
    </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/categories_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"/>


</LinearLayout>