<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2929"
    tools:context=".screens.ContactUs">
    <LinearLayout
        android:id="@+id/top_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:gravity="center"
            android:layout_weight="8">
            <View
                android:id="@+id/contactus_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/back"
                android:clickable="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:textStyle="bold"
                android:textSize="25sp"

                android:textColor="#DDDDDD"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@+id/top_layer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:background="@drawable/custom_about_us_background">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Name"
            android:background="@drawable/custom_contact_input_background"
            android:textColorHint="#AEAEAE"
            android:padding="10dp"
            android:textColor="#DADADA"

            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Email"
            android:background="@drawable/custom_contact_input_background"
            android:textColorHint="#AEAEAE"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:textColor="#DADADA"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Message"
            android:gravity="top"
            android:background="@drawable/custom_contact_input_background"
            android:textColorHint="#AEAEAE"
            android:layout_marginTop="25dp"
            android:padding="10dp"
            android:lineSpacingExtra="5dp"
            android:scrollHorizontally="false"
            android:maxLines="20"
            android:textColor="#DADADA"
            android:inputType="textMultiLine"/>


        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_button"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#E4E4E4"
            />
    </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>